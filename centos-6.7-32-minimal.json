{
    "builders" : [{
            "type" : "virtualbox-iso",
            "virtualbox_version_file" : ".vbox_version",
            "guest_os_type" : "RedHat",
            "disk_size" : 20960,
            "hard_drive_interface" : "sata",
            "vboxmanage" : [
                ["modifyvm", "{{.Name}}", "--memory", "512"],
                ["modifyvm", "{{.Name}}", "--cpus", "1"],
                ["modifyvm", "{{.Name}}", "--audio", "null"]
            ],

            "http_directory" : "http",
            "iso_url" : "http://mirrors.kernel.org/centos/6.7/isos/i386/CentOS-6.7-i386-minimal.iso",
            "iso_checksum" : "1860eb4d69c39ca274c6e2e9670d9e4fa77ea29c",
            "iso_checksum_type" : "sha1",

            "boot_wait" : "10s",
            "boot_command" : [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos/6.7-32/minimal/ks.cfg<enter><wait>"
            ],

            "ssh_username" : "vagrant",
            "ssh_password" : "vagrant",
            "ssh_port" : 22,
            "ssh_wait_timeout" : "10000s",

            "shutdown_command" : "echo 'vagrant'|sudo -S /sbin/shutdown -h now"
        }
    ],
    "provisioners" : [{
            "type" : "shell",
            "execute_command" : "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "scripts" : [
                "scripts/vagrant.sh",
                "scripts/virtualbox.sh",
                "scripts/network.sh",
                "scripts/compact.sh"
            ]
        }
    ],
    "post-processors" : [{
            "type" : "vagrant"
        }
    ]
}
