{
	"variables": {
		"32_bit_iso_url": "",
		"32_bit_iso_checksum": "",
		"32_bit_iso_checksum_type": "",
    "64_bit_iso_url": "",
		"64_bit_iso_checksum": "",
		"64_bit_iso_checksum_type": ""
	},
	"builders": [{
		"name": "32_min",
		"type": "virtualbox-iso",
		"virtualbox_version_file": ".vbox_version",
		"guest_os_type": "RedHat",
		"disk_size": 20960,
		"hard_drive_interface": "sata",
		"vboxmanage": [
			["modifyvm", "{{.Name}}", "--memory", "512"],
			["modifyvm", "{{.Name}}", "--cpus", "1"],
			["modifyvm", "{{.Name}}", "--audio", "null"]
		],

		"http_directory": "http",
		"iso_url": "{{user `32_bit_iso_url`}}",
		"iso_checksum": "{{user `32_bit_iso_checksum`}}",
		"iso_checksum_type": "{{user `32_bit_iso_checksum_type`}}",

		"boot_wait": "10s",
		"boot_command": [
			"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos/ks.cfg<enter><wait>"
		],

		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"ssh_port": 22,
		"ssh_wait_timeout": "10000s",

		"shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now"
	}, {
		"name": "64_min",
		"type": "virtualbox-iso",
		"virtualbox_version_file": ".vbox_version",
		"guest_os_type": "RedHat_64",
		"disk_size": 20960,
		"hard_drive_interface": "sata",
		"vboxmanage": [
			["modifyvm", "{{.Name}}", "--memory", "512"],
			["modifyvm", "{{.Name}}", "--cpus", "1"],
			["modifyvm", "{{.Name}}", "--audio", "null"]
		],

		"http_directory": "http",
		"iso_url": "{{user `64_bit_iso_url`}}",
		"iso_checksum": "{{user `64_bit_iso_checksum`}}",
		"iso_checksum_type": "{{user `64_bit_iso_checksum_type`}}",

		"boot_wait": "10s",
		"boot_command": [
			"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos/ks.cfg<enter><wait>"
		],

		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"ssh_port": 22,
		"ssh_wait_timeout": "10000s",

		"shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now"
	}, {
		"name": "32_py",
		"type": "virtualbox-iso",
		"virtualbox_version_file": ".vbox_version",
		"guest_os_type": "RedHat",
		"disk_size": 20960,
		"hard_drive_interface": "sata",
		"vboxmanage": [
			["modifyvm", "{{.Name}}", "--memory", "512"],
			["modifyvm", "{{.Name}}", "--cpus", "1"],
			["modifyvm", "{{.Name}}", "--audio", "null"]
		],

		"http_directory": "http",
		"iso_url": "{{user `32_bit_iso_url`}}",
		"iso_checksum": "{{user `32_bit_iso_checksum`}}",
		"iso_checksum_type": "{{user `32_bit_iso_checksum_type`}}",

		"boot_wait": "10s",
		"boot_command": [
			"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos/ks.cfg<enter><wait>"
		],

		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"ssh_port": 22,
		"ssh_wait_timeout": "10000s",

		"shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now"
	}, {
		"name": "64_py",
		"type": "virtualbox-iso",
		"virtualbox_version_file": ".vbox_version",
		"guest_os_type": "RedHat_64",
		"disk_size": 20960,
		"hard_drive_interface": "sata",
		"vboxmanage": [
			["modifyvm", "{{.Name}}", "--memory", "512"],
			["modifyvm", "{{.Name}}", "--cpus", "1"],
			["modifyvm", "{{.Name}}", "--audio", "null"]
		],

		"http_directory": "http",
		"iso_url": "{{user `64_bit_iso_url`}}",
		"iso_checksum": "{{user `64_bit_iso_checksum`}}",
		"iso_checksum_type": "{{user `64_bit_iso_checksum_type`}}",

		"boot_wait": "10s",
		"boot_command": [
			"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos/ks.cfg<enter><wait>"
		],

		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"ssh_port": 22,
		"ssh_wait_timeout": "10000s",

		"shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now"
	}],
	"provisioners": [{
		"only": ["32_py", "64_py"],
		"type": "shell",
		"execute_command": "sudo -iu vagrant bash '{{.Path}}'",
		"script": "scripts/pyenv-install.sh"
	}, {
		"type": "shell",
	  "execute_command": "sudo bash '{{.Path}}'",
		"scripts": [
			"scripts/vagrant.sh",
			"scripts/virtualbox.sh",
			"scripts/network.sh",
			"scripts/compact.sh"
		]
	}],
	"post-processors": [{
		"type": "vagrant"
	}]
}
